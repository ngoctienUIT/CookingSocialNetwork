<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>
        <import type="com.example.cookingsocialnetwork.post.PostViewModel"/>
        <variable
            name="postPageViewModel"
            type="PostViewModel" />
    </data>
<FrameLayout
    android:id="@+id/container_fragmentGridClickedItem"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        tools:ignore="UselessParent">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:elevation="10dp"
            android:padding="12dp">

            <ImageView
                android:id="@+id/back_post"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:elevation="0dp"
                android:src="@drawable/ic_back_ios"
                app:tint="@color/black" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:text="@string/post_title"
                android:textSize="20sp" />

            <TextView
                android:id="@+id/post"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_centerHorizontal="true"
                android:textSize="16sp"
                android:layout_alignParentEnd="true"
                android:text="@string/post"/>

            <TextView
                android:id="@+id/viewPost"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:layout_marginRight="10dp"
                android:layout_toLeftOf="@id/post"
                android:text="View Post"
                android:textSize="16sp" />
        </RelativeLayout>

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            tools:context=".post.PostPage">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <androidx.constraintlayout.widget.ConstraintLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    app:layout_constraintTop_toTopOf="parent"
                    android:padding="0dp">
                    <androidx.recyclerview.widget.RecyclerView
                        android:background="#30000000"
                        android:scrollbars="vertical"
                        android:id="@+id/recyclerViewImage"
                        android:layout_width="match_parent"
                        app:layout_constraintHeight_max="250dp"
                        android:layout_height="match_parent"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toTopOf="parent"
                        android:layout_marginBottom="10dp">
                    </androidx.recyclerview.widget.RecyclerView>
                </androidx.constraintlayout.widget.ConstraintLayout>

                <ImageButton
                    android:id="@+id/food_image"
                    android:layout_width="126dp"
                    android:layout_height="104dp"
                    android:adjustViewBounds="true"
                    android:padding="0dp"
                    android:scaleType="centerCrop"
                    android:src="@drawable/food_picker"
                    app:layout_constraintTop_toTopOf="parent"
                    tools:layout_editor_absoluteX="0dp" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    android:text="@string/image_request" />
                <EditText
                    android:id="@+id/name_Food"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:inputType="text"
                    android:background="@drawable/round_view"
                    android:layout_margin="10dp"
                    android:padding="10dp"
                    android:maxLines="1"
                    android:drawablePadding="10dp"
                    android:hint="@string/recipe_name_hint" />

                <EditText
                    android:id="@+id/txt_dec"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:inputType="textMultiLine"
                    android:background="@drawable/round_view"
                    android:padding="10dp"
                    android:layout_margin="10dp"
                    android:drawablePadding="10dp"
                    android:gravity="left"
                    android:minLines="4"
                    android:hint="@string/recipe_description_hint"
                    tools:ignore="InvalidId" />


                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_weight="1"
                        android:layout_width="fill_parent"
                        android:layout_height="match_parent"
                        android:gravity="center_vertical"
                        android:textSize="20sp"
                        android:layout_margin="10dp"
                        android:text="@string/serves" />

                    <EditText
                        android:id="@+id/txt_serves"
                        android:layout_weight="1"
                        android:layout_width="fill_parent"
                        android:layout_height="match_parent"
                        android:layout_margin="10dp"
                        android:background="@drawable/round_view"
                        android:padding="10dp"
                        android:hint="@string/serves_hint" />

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_weight="1"
                        android:layout_width="fill_parent"
                        android:layout_height="match_parent"
                        android:layout_margin="10dp"
                        android:gravity="center_vertical"
                        android:textSize="20sp"
                        android:text="@string/cook_time" />

                    <EditText
                        android:id="@+id/cookingTime"
                        android:layout_weight="1"
                        android:layout_width="fill_parent"
                        android:layout_height="match_parent"
                        android:layout_margin="10dp"
                        android:background="@drawable/round_view"
                        android:padding="10dp"
                        android:hint="@string/cook_time_hint" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="horizontal" >

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="fill_parent"
                        android:textSize="20sp"
                        android:layout_margin="10dp"
                        android:gravity="center_vertical"
                        android:text="@string/difficulty"
                        android:layout_weight="1"/>

                    <RatingBar
                        android:id="@+id/ratingLevel"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:numStars="4"
                        android:rating="1"
                        android:stepSize="1"
                        android:layout_margin="10dp"/>

                </LinearLayout>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="10dp"
                    android:background="#f7f6f2"
                    android:layout_marginVertical="10dp"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/ingredients_title"
                    android:layout_margin="10dp"
                    android:textSize="30sp" />

                <LinearLayout
                    android:id="@+id/ingredients"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                        <include layout="@layout/postpage_ingredient_child" />

                </LinearLayout>

                <Button
                    android:id="@+id/add_ingredient"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_margin="10dp"
                    android:layout_gravity="center"
                    android:background="#f7f6f2"
                    android:text="@string/add_ingredient" />

                <View
                    android:layout_width="match_parent"
                    android:layout_height="10dp"
                    android:background="#f7f6f2" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/method_title"
                    android:textSize="30sp"
                    android:layout_margin="10dp"/>

                <LinearLayout
                    android:id="@+id/method"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <include layout="@layout/postpage_ingredient_child"/>


                </LinearLayout>

                <Button
                    android:id="@+id/add_making_method"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_gravity="center"
                    android:background="#f7f6f2"
                    android:layout_margin="10dp"
                    android:text="@string/add_method_step" />
            </LinearLayout>

        </ScrollView>

    </LinearLayout>
</FrameLayout>

</layout>
