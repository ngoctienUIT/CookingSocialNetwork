<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>
            <import type="com.example.cookingsocialnetwork.post.PostViewModel"/>
        <variable
            name="postPageViewModel"
            type="PostViewModel" />
    </data>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".post.PostPage">


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:layout_constraintTop_toTopOf="parent"
                android:padding="0dp">

                <ImageButton
                    android:id="@+id/food_image"
                    android:layout_width="match_parent"
                    android:layout_height="220dp"
                    android:adjustViewBounds="true"
                    android:padding="0dp"
                    android:scaleType="centerCrop"
                    android:src="@drawable/food_picker"
                    app:layout_constraintTop_toTopOf="parent"
                    tools:layout_editor_absoluteX="0dp" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    android:text="@string/image_request" />
            </androidx.constraintlayout.widget.ConstraintLayout>

            <EditText
                android:id="@+id/name_Food"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:inputType="text"
                android:layout_marginHorizontal="10dp"
                android:layout_marginVertical="10dp"
                android:maxLines="1"
                android:drawablePadding="10dp"
                android:hint="@string/recipe_name_hint" />

            <EditText
                android:id="@+id/txt_dec"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:inputType="textMultiLine"
                android:layout_marginHorizontal="10dp"
                android:layout_marginVertical="10dp"
                android:drawablePadding="10dp"
                android:hint="@string/recipe_description_hint"
                tools:ignore="InvalidId" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:layout_weight="1"
                    android:layout_width="fill_parent"
                    android:layout_height="match_parent"
                    android:text="@string/serves" />

                <EditText
                    android:layout_weight="1"
                    android:layout_width="fill_parent"
                    android:layout_height="match_parent"
                    android:hint="@string/serves_hint" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView

                    android:layout_weight="1"
                    android:layout_width="fill_parent"
                    android:layout_height="match_parent"
                    android:text="@string/cook_time"></TextView>

                <EditText
                    android:id="@+id/cookingTime"
                    android:layout_weight="1"
                    android:layout_width="fill_parent"
                    android:layout_height="match_parent"
                    android:hint="@string/cook_time_hint"></EditText>
            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="10dp"
                android:background="#c0c0c0"></View>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/ingredients_title"
                android:textSize="30dp"></TextView>

            <LinearLayout
                android:id="@+id/ingredient"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">


                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <EditText
                        android:id="@+id/txt_Ingredients"
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:hint="@string/ingredients_hint"></EditText>

                    <Button
                        android:layout_weight="1"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:onClick="deleteIngredient"></Button>

                </LinearLayout>
            </LinearLayout>

            <Button
                android:id="@+id/add_ingredient"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_gravity="center"
                android:text="@string/add_ingredient"></Button>

            <View
                android:layout_width="match_parent"
                android:layout_height="10dp"
                android:background="#c0c0c0"></View>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/method_title"
                android:textSize="30dp"></TextView>

            <LinearLayout
                android:id="@+id/method"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <EditText
                        android:id="@+id/txt_Method"
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:hint="@string/method_step_hint"></EditText>

                    <Button
                        android:layout_weight="1"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" />
                </LinearLayout>


            </LinearLayout>

            <Button
                android:id="@+id/add_making_method"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_gravity="center"
                android:text="@string/add_method_step" />
            <Button
                android:id="@+id/btn_Post"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Post"
                />
        </LinearLayout>
    </ScrollView>
</layout>
