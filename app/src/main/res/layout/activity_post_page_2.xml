<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">
    <RelativeLayout
        android:id="@+id/postPage2_layout"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <RelativeLayout
            android:id="@+id/post_page_top"
            android:layout_width="match_parent"
            android:layout_height="50dp">

            <Button
                android:id="@+id/post_page_btn_back"
                style="?android:attr/borderlessButtonStyle"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:gravity="center"
                android:minWidth="55dp"
                android:text="x"
                android:textColor="@color/black"
                android:textSize="20sp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_toEndOf="@id/post_page_btn_back"
                android:gravity="center"
                android:text="Tạo công thức"
                android:textSize="25sp"
                android:textStyle="bold" />

            <Button
                android:id="@+id/post_page_btn_close"
                style="?android:attr/borderlessButtonStyle"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_alignParentEnd="true"
                android:gravity="center"
                android:minWidth="55dp"
                android:text="Đóng"
                android:textColor="@color/black"
                android:textSize="20sp" />
        </RelativeLayout>

        <com.google.android.material.tabs.TabLayout
            android:id="@+id/post_page_tab"
            android:layout_width="match_parent"
            android:layout_height="10dp"
            android:layout_below="@id/post_page_top"
            app:tabInlineLabel="true"
            app:tabMode="fixed" />

        <androidx.viewpager2.widget.ViewPager2
            android:id="@+id/post_page_viewPager"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_above="@id/post_page_end"
            android:layout_below="@id/post_page_tab" />
        <LinearLayout
            android:id="@+id/post_page_end"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:layout_alignParentBottom="true">

            <Button
                android:id="@+id/post_page_preview_btn"
                android:layout_width="wrap_content"
                android:layout_marginVertical="5dp"
                android:text="Xem trước"
                android:layout_marginHorizontal="15dp"
                android:layout_height="match_parent"
                android:layout_alignParentStart="true"
                android:layout_weight="1"/>

            <Button
                android:id="@+id/post_page_next_button"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_alignParentEnd="true"
                android:layout_marginHorizontal="15dp"
                android:layout_marginVertical="5dp"
                android:layout_weight="1"
                android:text="Tiếp theo"/>
        </LinearLayout>
    </RelativeLayout>


</layout>
