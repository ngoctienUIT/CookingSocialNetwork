<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".post2.postPage2TabFragment.PostPage2Fragment3">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <TextView
            android:id="@+id/post_page2_fragment5_start_text"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="#f7f6f2"
            android:padding="15dp"
            android:text="Gần xong rồi! Có điều gì muốn chia sẻ không?"
            android:textSize="22sp" />

        <TextView
            android:id="@+id/post_page2_fragment5_food_note_lb"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/post_page2_fragment5_start_text"
            android:layout_marginStart="15sp"
            android:layout_marginTop="30dp"
            android:text="Đôi lời muốn nói"
            android:textSize="25sp"
            android:textStyle="bold" />

        <EditText
            android:id="@+id/post_page2_fragment5_food_note"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/post_page2_fragment5_food_note_lb"
            android:layout_marginHorizontal="15sp"
            android:maxLength="100"
            android:minLines="2" />

        <TextView
            android:id="@+id/post_page2_fragment1_food_des_count"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/post_page2_fragment5_food_note"
            android:layout_alignEnd="@id/post_page2_fragment5_food_note"
            android:layout_marginTop="10dp"
            android:text="0/100"
            android:textSize="15sp" />
    </RelativeLayout>
</ScrollView>