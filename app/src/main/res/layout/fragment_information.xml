<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <data>
        <variable
            name="viewmodel"
            type="com.example.cookingsocialnetwork.newviewpost.ViewPostViewModel" />
    </data>

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".newviewpost.view.InformationFragment">

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <LinearLayout
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <LinearLayout
                    android:layout_marginTop="15dp"
                    android:id="@+id/view_profile"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_marginHorizontal="10dp">

                    <androidx.cardview.widget.CardView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="bottom|center_horizontal"
                        app:cardCornerRadius="180dp">

                        <ImageView
                            android:id="@+id/avatar"
                            android:layout_width="56dp"
                            android:layout_height="56dp"
                            android:src="@drawable/ic_account_circle"/>

                    </androidx.cardview.widget.CardView>

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:layout_marginHorizontal="10dp">

                        <TextView
                            android:id="@+id/name"
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            android:textSize="14sp"
                            android:textStyle="bold"
                            android:text="@{viewmodel.user.name}"/>

                        <TextView
                            android:id="@+id/user_name"
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            android:textSize="14sp"
                            android:text="@{viewmodel.user.username}"/>

                        <TextView
                            android:id="@+id/time"
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            android:textSize="14sp"
                            android:textColor="#69C9D0"
                            android:text="@{viewmodel.post.timePost.dataTime}"/>

                    </LinearLayout>

                </LinearLayout>

                <LinearLayout
                    android:elevation="5dp"
                    android:paddingTop="20dp"
                    android:layout_marginBottom="10dp"
                    android:paddingStart="40dp"
                    android:layout_marginEnd="10dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:layout_weight="1">

                        <TextView
                            android:text="Thời gian nấu:"
                            android:textSize="12sp"
                            android:textColor="#69C9D0"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"/>

                        <TextView
                            android:id="@+id/time_cooking"
                            android:paddingBottom="5dp"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:textSize="18sp"
                            android:textStyle="bold"
                            android:text="@{viewmodel.post.cookingTime}"/>

                    </LinearLayout>

                    <View
                        android:layout_gravity="center"
                        android:layout_width="1dp"
                        android:layout_height="25dp"
                        android:background= "@drawable/line_ver"
                        android:backgroundTint="#69C9D0"/>

                    <LinearLayout
                        android:layout_marginStart="5dp"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:layout_weight="1">

                        <TextView
                            android:text="Khẩu phần"
                            android:textSize="12sp"
                            android:textColor="#69C9D0"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"/>

                        <TextView
                            android:textStyle="bold"
                            android:id="@+id/servers"
                            android:paddingBottom="5dp"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:textSize="18sp"
                            android:text="@{viewmodel.post.servers}"/>

                    </LinearLayout>

                    <View
                        android:layout_gravity="center"
                        android:layout_width="1dp"
                        android:layout_height="25dp"
                        android:background= "@drawable/line_ver"
                        android:backgroundTint="#69C9D0"/>

                    <LinearLayout
                        android:layout_marginStart="5dp"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:layout_weight="1">

                        <TextView
                            android:text="Độ khó"
                            android:textSize="12sp"
                            android:textColor="#69C9D0"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"/>

                        <LinearLayout
                            android:orientation="horizontal"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent">

                            <TextView
                                android:textStyle="bold"
                                android:layout_gravity="center"
                                android:id="@+id/level"
                                android:paddingBottom="5dp"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:textSize="18sp"
                                android:textColor="#DC143C"
                                android:text="@{viewmodel.post.level + `/5`}"/>

                            <ImageView
                                android:layout_gravity="center"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:src="@drawable/ic_star"
                                app:tint="#FFD700"/>

                        </LinearLayout>

                    </LinearLayout>

                </LinearLayout>

                <TextView
                    android:layout_marginTop="15dp"
                    android:layout_marginHorizontal="10dp"
                    android:textAlignment="center"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@{viewmodel.post.description}"/>

                <TextView
                    android:layout_marginTop="20dp"
                    android:layout_marginHorizontal="10dp"
                    android:textAlignment="center"
                    android:textStyle="bold"
                    android:textSize="16sp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textColor="@color/red"
                    android:text="Lưu ý:"/>

                <TextView
                    android:layout_marginTop="10dp"
                    android:text="abc"
                    android:textAlignment="center"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"/>

                <LinearLayout
                    android:layout_marginTop="30dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <LinearLayout
                        android:id="@+id/btn_favourite"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:layout_weight="1">

                        <ImageView
                            android:id="@+id/ico_favourite"
                            android:layout_width="25dp"
                            android:layout_height="25dp"
                            android:layout_gravity="center"
                            android:src="@drawable/ic_favorite_border"
                            app:tint="@color/red" />

                        <TextView
                            android:id="@+id/favourite"
                            android:textAlignment="center"
                            android:paddingBottom="5dp"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:textSize="14sp"
                            android:text="@{Integer.toString(viewmodel.post.favourites.size())}"/>

                    </LinearLayout>

                    <View
                        android:layout_gravity="center"
                        android:layout_width="1dp"
                        android:layout_height="25dp"
                        android:background= "@drawable/line_ver"
                        android:backgroundTint="#69C9D0"/>

                    <LinearLayout
                        android:id="@+id/btn_comment"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:layout_weight="1">

                        <ImageView
                            android:layout_gravity="center"
                            android:layout_width="25dp"
                            android:layout_height="25dp"
                            android:src="@drawable/icons_comment"
                            app:tint="@color/green" />

                        <TextView
                            android:id="@+id/comment"
                            android:textAlignment="center"
                            android:paddingBottom="5dp"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:textSize="14sp"
                            android:text="@{Integer.toString(viewmodel.post.comments.size())}"/>

                    </LinearLayout>

                    <View
                        android:layout_gravity="center"
                        android:layout_width="1dp"
                        android:layout_height="25dp"
                        android:background= "@drawable/line_ver"
                        android:backgroundTint="#69C9D0"/>

                    <LinearLayout
                        android:id="@+id/btn_share"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:layout_weight="1">

                        <ImageView
                            android:layout_gravity="center"
                            android:layout_width="25dp"
                            android:layout_height="25dp"
                            android:src="@drawable/ic_round_reply"
                            app:tint="@color/green" />

                        <TextView
                            android:id="@+id/share"
                            android:textAlignment="center"
                            android:paddingBottom="5dp"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:textSize="14sp"
                            android:text="@{Long.toString(viewmodel.post.share)}"/>

                    </LinearLayout>

                </LinearLayout>

            </LinearLayout>

        </ScrollView>

    </FrameLayout>

</layout>