<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/container"
    app:cardCornerRadius="10dp"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    app:cardBackgroundColor="#73e6f8"
    android:layout_margin="20dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/trendingFoodPicture"
            android:layout_width="match_parent"
            android:layout_height="200dp"
            android:scaleType="centerCrop"
            android:src="@drawable/food_picker" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <LinearLayout
                android:backgroundTint="#F5FFFA"
                android:gravity="center"
                android:background="@drawable/bg_trend"
                android:orientation="horizontal"
                android:layout_width="120dp"
                android:layout_height="match_parent">

                <ImageView
                    android:src="@drawable/ic_favorite_border"
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    app:tint="@color/red" />

                <TextView
                    android:paddingStart="10dp"
                    android:id="@+id/heartTrending"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:gravity="center"
                    android:text="123"
                    android:textSize="20sp" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <TextView
                    android:layout_marginStart="10dp"
                    android:id="@+id/trendingNameFood"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:textColor="@color/red"
                    android:textStyle="bold"
                    android:text="Tên món ăn được yêu thích nhất"
                    android:textSize="20dp"/>

        </LinearLayout>

        </LinearLayout>

    </LinearLayout>

</androidx.cardview.widget.CardView>