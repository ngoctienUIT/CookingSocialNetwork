<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:tools="http://schemas.android.com/tools"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <data>
        <variable
            name="viewmodel"
            type="com.example.cookingsocialnetwork.main.fragment.home.HomeViewModel" />
    </data>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:background="#f7f6f2"
        tools:context=".main.fragment.home.HomeFragment">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="84dp"></RelativeLayout>
        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="#TRENDING"
                    android:textSize="20sp"
                    android:layout_marginStart="20dp"/>


                <androidx.viewpager2.widget.ViewPager2
                    android:id="@+id/trending"
                    android:layout_width="match_parent"
                    android:layout_height="200dp" />

                <androidx.cardview.widget.CardView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    app:cardCornerRadius="5dp"
                    android:layout_margin="20dp"
                    app:cardBackgroundColor="#73e6f8">
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="vertical">
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content">
<!--                            <androidx.recyclerview.widget.RecyclerView-->
<!--                                android:layout_width="match_parent"-->
<!--                                android:layout_height="match_parent">-->
                                <ImageView
                                    android:layout_width="wrap_content"
                                    android:layout_height="200dp"
                                    android:scaleType="centerCrop"
                                    android:src="@drawable/food_picker"/>

<!--                            </androidx.recyclerview.widget.RecyclerView>-->

                        </LinearLayout>
                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:textSize="25sp"
                            android:text="Một cái món gì đấy mà có vẻ nó sẽ là trend"
                            android:gravity="center"/>
                    </LinearLayout>
                </androidx.cardview.widget.CardView>
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="#RANDOM"
                    android:textSize="20sp"
                    android:layout_marginStart="20dp"/>
                <androidx.swiperefreshlayout.widget.SwipeRefreshLayout
                    android:id="@+id/swp_records"
                    android:layout_width="match_parent"
                    android:layout_height="240dp"
                    android:layout_marginHorizontal="20dp"
                    tools:layout_behavior="@string/appbar_scrolling_view_behavior">

                    <androidx.recyclerview.widget.RecyclerView
                        android:id="@+id/rec_posts"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        tools:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"
                        tools:listitem="@layout/recyclerview_item_form" />
                </androidx.swiperefreshlayout.widget.SwipeRefreshLayout>
                <!--spacing-->
                <View
                    android:layout_width="match_parent"
                    android:layout_height="70dp"/>
            </LinearLayout>
        </ScrollView>
    </LinearLayout>
</layout>

