<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".post2.postPage2TabFragment.PostPage2Fragment3">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <TextView
            android:id="@+id/post_page2_fragment4_start_text"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="#FFA07A"
            android:padding="15dp"
            android:text="Tới lúc bắt tay vào làm rồi! Các bước thực hiện sẽ là..."
            android:textSize="18sp" />

        <TextView
            android:textColor="#FF4500"
            android:id="@+id/post_page2_fragment4_food_step_lb"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/post_page2_fragment4_start_text"
            android:layout_marginStart="15sp"
            android:layout_marginTop="30dp"
            android:text="Cách làm"
            android:textSize="20sp"
            android:textStyle="bold" />

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/post_page2_fragment4_step"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/post_page2_fragment4_food_step_lb"
            android:layout_marginHorizontal="15dp"
            android:layout_marginTop="30dp"
            android:orientation="vertical" />

        <com.google.android.material.button.MaterialButton
            android:id="@+id/post_page2_fragment4_add_step"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/post_page2_fragment4_step"
            android:layout_marginHorizontal="15dp"
            android:layout_marginTop="30dp"
            android:backgroundTint="#00FFFFFF"
            android:stateListAnimator="@null"
            android:text="+ Thêm một bước"
            android:textColor="#008000"
            app:cornerRadius="5dp"
            app:strokeColor="#FF6347"
            app:strokeWidth="2dp" />

    </RelativeLayout>

</ScrollView>