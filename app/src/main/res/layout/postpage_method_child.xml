<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:id="@+id/asd">

    <EditText
        android:id="@+id/txt_Methods"
        android:layout_width="fill_parent"
        android:layout_height="50dp"
        android:layout_alignParentStart="true"
        android:layout_marginVertical="10dp"
        android:layout_marginStart="10dp"
        android:layout_toStartOf="@+id/btn_Methods"
        android:background="@drawable/round_view"
        android:hint="@string/ingredients_hint"
        android:minHeight="48dp"
        android:padding="10dp" />

    <Button
        android:id="@+id/btn_Methods"
        android:layout_width="wrap_content"
        android:layout_height="50dp"
        android:layout_alignParentEnd="true"
        android:layout_marginVertical="10dp"
        android:background="#00FFFFFF"
        android:minWidth="0dp"
        android:onClick="deleteIngredient"
        android:text="\u2026"
        android:textColor="#deddd9"
        android:textSize="15sp"
        android:textStyle="bold" />

    <ImageView
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_below="@id/txt_Methods"
        android:scaleType="centerCrop"
        android:src="@drawable/food_picker"
        android:layout_alignStart="@id/txt_Methods"/>



</RelativeLayout>