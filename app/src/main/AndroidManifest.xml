<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android">

    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.FOREGROUND_SERVICE" />
    <uses-permission android:name="android.permission.RECEIVE_BOOT_COMPLETED" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:requestLegacyExternalStorage="true"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.CookingSocialNetwork">
        <activity
            android:name=".profile.ProfileActivity"
            android:exported="false" />
        <activity
            android:name=".viewpost.ViewFullPost"
            android:exported="false" />
        <activity
            android:name=".setting.report.view.AddMaterialActivity"
            android:exported="false" />
        <activity
            android:name=".setting.report.view.AddFunctionActivity"
            android:exported="false" />
        <activity
            android:name=".setting.report.view.ReportErrorActivity"
            android:exported="false" />
        <activity
            android:name=".setting.report.ReportActivity"
            android:exported="false" />
        <activity
            android:name=".intro.IntroPage"
            android:exported="false" />
        <activity
            android:name=".setting.about.AboutPage"
            android:exported="false" />
        <activity
            android:name=".main.MainPage"
            android:exported="false" />
        <activity
            android:name=".setting.changeProfile.SettingChangeProfile"
            android:exported="false" />
        <activity
            android:name=".setting.SettingPage"
            android:exported="false" />
        <activity
            android:name=".post.PostPage"
            android:exported="false"
            android:screenOrientation="fullSensor" />
        <activity
            android:name=".post.ViewPostPage"
            android:exported="false" />
        <activity
            android:name=".mainActivity.MainActivity"
            android:exported="true">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name="com.yalantis.ucrop.UCropActivity"
            android:screenOrientation="fullSensor"
            android:theme="@style/Theme.AppCompat.Light.NoActionBar" />

        <service android:name=".model.service.MyService" />

        <receiver
            android:name=".model.service.MyBroadcastReceiver"
            android:exported="true">
            <intent-filter>
                <action android:name="android.intent.action.BOOT_COMPLETED" />
            </intent-filter>
        </receiver>
    </application>

</manifest>